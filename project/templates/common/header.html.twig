<header>
        <div class="headerTop">
                <div class="headerTop_left">
                        <div class="burgerMenu">
                                <span></span>
                        </div>
                        <div class="logoHeader">
                                <a class="" href="{{ path('app_home') }}">E-COM</a>
                        </div>
                        <div class="headerMenuOverlay">
                                {% for key1, value1 in globalDataCategory %}
                                        <div class="accordionItem">
                                                <div class="accordion-item-header">
                                                        {{ key1 }}
                                                </div>
                                                <div class="accordion-item-body">
                                                        <div class="accordion-item-body-content">
                                                                <ul class="sousMenuAccordion">
                                                                        {% for key2, value2 in value1.childrenCategory %}
                                                                                <li>
                                                                                        {% if value2.childrenCategory is not empty %}
                                                                                                <a class="accordionCatMain"
                                                                                                   href="">{{ key2 }}</a>

                                                                                                <ul>
                                                                                                        {% for key3, value3 in value2.childrenCategory %}
                                                                                                                <li>
                                                                                                                        <a href="">{{ key3 }}</a>
                                                                                                                </li>
                                                                                                        {% endfor %}
                                                                                                </ul>
                                                                                        {% else %}
                                                                                                <a class="accordionCatMain"
                                                                                                   href=""
                                                                                                >{{ key2 }}</a>
                                                                                        {% endif %}
                                                                                </li>
                                                                        {% endfor %}
                                                                </ul>
                                                        </div>
                                                </div>
                                        </div>
                                {% endfor %}
                        </div>
                </div>
                <div class="menuDesktop">
                        <ul>
                                {% for key1, value1 in globalDataCategory %}
                                        <li>
                                                <a href="#">{{ key1 }}</a>
                                                <ul class="sousMenuDesktop">
                                                        {% for key2, value2 in value1.childrenCategory %}
                                                                <li>
                                                                        {% if value2.childrenCategory is not empty %}
                                                                                <a href="">{{ key2 }}</a>

                                                                                <ul>
                                                                                        {% for key3, value3 in value2.childrenCategory %}
                                                                                                <li>
                                                                                                        <a href="">{{ key3 }}</a>
                                                                                                </li>
                                                                                        {% endfor %}
                                                                                </ul>
                                                                        {% else %}
                                                                                <a href="">{{ key2 }}</a>
                                                                        {% endif %}
                                                                </li>
                                                        {% endfor %}
                                                </ul>
                                        </li>
                                {% endfor %}

                        </ul>
                        <input class="headerSearchDesktop"/>
                        <div class="deleteSearchDesktop">
                                <i class="fa-solid fa-delete-left"></i>
                        </div>
                        <div class="headerCroixSearchDesktop">
                                <i class="fa-solid fa-xmark"></i>
                        </div>
                </div>
                <div class="headerTop_right">
                        <div class="headerTop_right_profil">
                                <i class="fa-solid fa-user"></i>
                                <span>Mon compte</span>

                        </div>
                        <div class="profilMenuDesktop">
                                <ul>
                                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                                <a href=""><li>Mon compte</li></a>
                                                <hr>
                                                <a href=""><li>Déconnexion</li></a>
                                        {% else %}
                                                <a href=""><li>Connexion</li></a>
                                                <hr>
                                                <a href=""><li>Inscription</li></a>
                                        {% endif %}
                                </ul>
                        </div>


                        <div class="headerTop_right_cart">
                                <i class="fa-solid fa-cart-shopping"></i>
                                <span>Mon panier</span>
                        </div>

                        <div class="headerDivSearch">
                                <i class="fa-solid fa-magnifying-glass"></i>
                        </div>
                        <div class="headerSearchOverlay">
                                <div class="divCloseHeaderSearch"><i class="fa-solid fa-xmark"></i></div>
                                <p>Rechercher un produit</p>
                                <form action="" method="GET">
                                        <div class="divInputHeaderSearch">
                                                <input type="text" required name="produit" id="" class="inputHeaderSearch" placeholder="Votre recherche...">
                                                <span class="searchDeleteInputMobile"><i class="fa-solid fa-delete-left"></i></span>
                                        </div>
                                        <div class="divButtonSearchOverlay">
                                                <button type="submit">Rechercher</button>
                                        </div>
                                </form>
                        </div>
                </div>
        </div>
        <div class="profilMenuMobile">
                <div class="divCloseprofilMenu"><i class="fa-solid fa-xmark"></i></div>
                <ul>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <li><a href="">Mon compte</a></li>
                                <hr>
                                <li><a href="">Déconnexion</a></li>
                        {% else %}
                                <li><a href="">Connexion</a></li>
                                <hr>
                                <li><a href="">Inscription</a></li>
                        {% endif %}
                </ul>
        </div>
</header>